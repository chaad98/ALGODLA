<div class="menubar-container">
    <div class="menubar-child">
        <div class="menu-subchild one">
            <%= link_to root_path do %>
                <%= image_tag "algodla_white.png", class: "logo" %>
            <% end %>
        </div>
        <div class="menu-subchild two">
            <%= link_to t('.menu_link1'), root_path, class: "menu-link one" %>
            <%= link_to t('.menu_link2'), contact_path, class: "menu-link two" %>
            <div class="language-dropdown">
                <button class="language-button"><%= t 'languages.lang_btn' %></button>
                <ul class="language-list">
                    <li><%= link_to t('languages.english'), url_for(locale: :en) %></li>
                    <li><%= link_to t('languages.malay'), url_for(locale: :bm) %></li>
                    <li><%= link_to t('languages.chinese'), url_for(locale: :cn) %></li>
                </ul>
            </div>
